<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".RegisterVolunteerActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/carter_one"
                android:text="Location Detail"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.116" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location Name: "
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/registerVolunteerLocationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Town Square"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location Owner: "
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/registerVolunteerLocationOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quang Le"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Date: "
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/registerVolunteerEventDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/01/2023"
                        android:textSize="20sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Duration: "
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/registerVolunteerDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 day"
                        android:textSize="20sp" />
                </LinearLayout>



            <TextView
                android:id="@+id/registerVolunteerMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="You are the owner of this location"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/registerVolunteerButton"
                android:layout_width="217dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/blue"
                android:layout_marginTop="5dp"
                android:text="Register"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintVertical_bias="0.838" />

            <LinearLayout
                android:id="@+id/linearLayoutAmountTrash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter number of Trash collected (in kg)"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/amountTrashEditText"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />


            </LinearLayout>



            <Button
                android:id="@+id/finishedLocationButton"
                android:layout_width="217dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/green"
                android:text="Finish"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/removeVolunteerButton"
                android:layout_width="217dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/red"
                android:text="Remove"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.838" />

            <Button
                android:id="@+id/registerVolunteerBackButton"
                android:layout_width="217dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/red"
                android:text="Back"
                android:textColor="@color/black"
                android:textStyle="bold|italic" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>